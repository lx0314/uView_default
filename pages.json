{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/user/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},
		{
			"path" : "pages/car/index",
			"style" :                                                                                    
			{
					"navigationBarTitleText": "购物车",
					"enablePullDownRefresh": false
			}
		},
		{
				"path" : "pages/sort/index",
				"style" :                                                                                    
				{
						"navigationBarTitleText": "商品分类",
						"enablePullDownRefresh": false
				}
		},
		{
				"path" : "pages/goodsshow/index",
				"style" :                                                                                    
				{
						"navigationBarTitleText": "商品详情",
						"enablePullDownRefresh": false
				}
		},
		{
				"path" : "pages/user/logo",
				"style" :                                                                                    
				{
						"navigationBarTitleText": "登录",
						"enablePullDownRefresh": false
				}
			},
		{
				"path" : "pages/user/register",
				"style" :                                                                                    
				{
						"navigationBarTitleText": "注册",
						"enablePullDownRefresh": false
				}
			},
		{
				"path" : "pages/user/userinfo",
				"style" :                                                                                    
				{
						"navigationBarTitleText": "修改用户名",
						"enablePullDownRefresh": false
				}
			}
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "图书商城",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#000000",
	    "selectedColor": "#fc4327",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/icon/h.png",
	        "selectedIconPath": "static/icon/ha.png",
	        "text": "首页"
	    }, {
	        "pagePath": "pages/sort/index",
	        "iconPath": "static/icon/g.png",
	        "selectedIconPath": "static/icon/ga.png",
	        "text": "商品"
	    },{
	        "pagePath": "pages/car/index",
	        "iconPath": "static/icon/c.png",
	        "selectedIconPath": "static/icon/ca.png",
	        "text": "购物车"
	    }, {
	        "pagePath": "pages/user/index",
	        "iconPath": "static/icon/m.png",
	        "selectedIconPath": "static/icon/ma.png",
	        "text": "我的"
	    }]
	}
}
